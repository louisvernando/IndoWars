@model IEnumerable<IndoWars.Models.News>

<section id="News">
    <div class="container">
        <div class="section-heading scrollpoint sp-effect2">
            <h1>News</h1>
            <div class="divider"></div>
            <p>IndoWars Update and News</p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="text-align: center">Type</th>
                        <th style="text-align: center">Date</th>
                        <th style="text-align: center">Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Type</td>
                            <td>@item.Date</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>